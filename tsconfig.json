{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "resolveJsonModule": true,
      "types": [
        "node", 
        "@wdio/globals/types",
        "@wdio/mocha-framework",
        "@types/mocha",
        "@types/supertest",
        "mocha",
        "dotenv"
      ],
    },
    "include": [
      "tests/specs/**/*.test.ts",
      "config/wdio.conf.ts"
    ]
  }